<div class="main-container">
  <header class="signup">
      <div class="background-image-holder parallax-background">
        <img class="background-image" alt="Background Image" src="/images/browse.jpg">
      </div>

      <div class="container text-center">
        <div class="row text-center">
          <div class="col-sm-12 text-center">
            <h1 class="text-white">Browse</h1>
         <% if user_signed_in? %>
          <span class="text-white">Get our weekly inspirational emails, and a love letter: "You're Not Broken."</span><br><br>
          <div id="mc_embed_signup"> <form class="validate" id="mc-embedded-subscribe-form" action="//resilientapp.us9.list-manage.com/subscribe/post?u=0f2ed3ea91eb1d8f12d344ee1&amp;id=4334a5a58c" method="post" name="mc-embedded-subscribe-form" novalidate="" target="_blank"> <div class="mc-field-group"> <input class="required" id="mce-FNAME" type="text" name="FNAME" placeholder="First Name" value=""  /> <input class="required email" id="mce-EMAIL" type="email" name="EMAIL" placeholder="Email Address" value=""  /> <input type="hidden" name="b_8c2fdee11f59dc4d7adf9bcbf_83dec78335" value=""><input type="submit" id="mc-embedded-subscribe" /> </div> </form>
     <% else %>
         <%= link_to "Log in", new_user_session_path, class: "btn btn-white btn-primary" %>
         <%= link_to "Sign up", new_user_registration_path, class: "btn btn-primary btn-filled" %>
  <% end %> 
          </div>
        </div>
      </div>
  </header>

  <div class="container"><br>

    <div id="pins" class="transitions-enabled">

      <% @channels.each do |channel| %>
        <div class="col-md-3">
          <%= link_to channel do %>
            <div class="channel_box">
              <% if channel.image? %>
                <span><%= image_tag channel.image.url(:medium) %></span>
              <% end %>

            </div>
            <div class="channel_footer">
              <hr style="margin: 10px 0">
              <h4><%= channel.name %></h4>
              <%= channel.description.truncate(60) %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>

