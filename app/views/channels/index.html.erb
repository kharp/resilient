<div class="main-container">
  <header class="signup">
      <div class="background-image-holder parallax-background">
        <img class="background-image" alt="Background Image" src="/images/browse.jpg">
      </div>

      <div class="container text-center">
        <div class="row text-center">
          <div class="col-sm-12 text-center">
            <h1 class="text-white">Browse</h1>
          </div>
        </div>
      </div>
  </header>

  <div class="container"><br>

    <div id="pins" class="transitions-enabled">

      <% @channels.each do |channel| %>
        <div class="col-md-3">
          <%= link_to channel do %>
            <div class="channel_box">
              <% if channel.image? %>
                <span><%= image_tag channel.image.url(:medium) %></span>
              <% elsif channel.pins.first %>
                <span><%= image_tag channel.pins.first.image.url(:medium) %></span>  
              <% end %>
            </div>
            <div class="channel_footer">
              <hr style="margin: 10px 0">
              <h4><%= channel.name %></h4>
              <%= channel.description.truncate(60) %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>

</div>
