    <div class="row"></div>
    <% if @channel.user == current_user %>
      <div class="col-md-3">
        <%= link_to new_channel_pin_path(@channel) do %>
          <div class="new_channel_box">
            Add Pin <br />
            <i class="fa fa-plus-circle fa-2x"></i>
          </div>
        <% end %>
      </div>
    <% end %>


    <div id="pins" class="transitions-enabled">

      <% @pins.each do |pin| %>
        <div class="col-md-3">
          <%= link_to channel_pin_path(pin.channel, pin) do %>
            <div class="channel_box">
              <span><%= image_tag pin.image.url(:medium) %></span>
            </div>
           <div class="channel_footer">
              <hr>
              <%= pin.description.truncate(60) %>
            </div>
          <% end %>
        </div>
      <% end %>
