<%= render 'pages/home' unless user_signed_in? %>

<div class="main-container">
  <header class="signup">
    <div class="background-image-holder parallax-background">
      <img class="background-image" alt="Background Image" src="/images/browse.jpg">
    </div>

    <div class="container text-center">
      <div class="row text-center">
        <div class="col-sm-12 text-center">
          <h1 class="text-white"><%= @pin.description %></h1>
        </div>
      </div>
    </div>
  </header>
  <p id="notice"><%= notice %></p>

  <div class="container">

    <%= link_to 'Back', channel_path(@channel) %>
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-default">
          <div class="panel-heading center">
            <%= image_tag @pin.image.url(:large), class:"center-block" %>
          </div>
          <div class="panel-body">
            <p><%= @pin.description %></p>
            <p><strong><%= @pin.user.name if @pin.user %></strong></p>

            <% if @pin.user == current_user %>
              <%= link_to "Edit", edit_channel_pin_path(@channel, @pin) %> |
              <%= link_to 'Delete', channel_pin_path(@channel, @pin), data: {:confirm => 'Are you sure you want to delete this natter?'}, method: :delete %>
            <% end %>

            <br><br>
            <h3>Comments</h3>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>