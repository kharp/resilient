<% if current_user %>
  <div aria-hidden="false" aria-labelledby="myModalLabel" class="modal fade" id="new-repin-modal" role="dialog" tabindex="-1">
    <%= render partial: '/pins/repin_new_modal' %>
  </div>
<% end %>
<div class="main-container">
  <header class="signup">
    <div class="background-image-holder parallax-background">
      <img class="background-image" alt="Background Image" src="/images/browse.jpg">
    </div>

    <div class="container text-center">
      <div class="row text-center">
        <div class="text-center">
          <h1 class="text-white">View Pin</h1>
        </div>
      </div>
    </div>
  </header>
  <p id="notice"><%= notice %></p>

  <div class="container">

    <%= link_to 'Back', channel_path(@channel) %>

    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-default">
          <div class="panel-heading center">
            <% if @pin.user != current_user && user_signed_in? %>
              <%= link_to "javascript:void(0)", :data => {toggle: "modal", target: "#new-repin-modal", id: 'repin_link'} do %>
                <i class="fa fa-heart repin pull-left"> Save</i>
              <% end %>
            <% end %>
            <% if @pin.image_url.present? %>
              <%= link_to @pin.image_url, target: "_blank" do %>
                <%= image_tag @pin.image.url(:large), class:"center-block" %>
              <% end %>
            <% else %>
              <%= image_tag @pin.image.url(:large), class:"center-block" %>
            <% end %>
          </div>
          <div class="panel-body">
            <p><strong>Description: </strong><%= @pin.description %></p>
            <% if @pin.image_url? %>
              <p><strong>URL: </strong><%= link_to @pin.image_url do %>
                <span> <%= @pin.image_url %></span>
              <% end %>
              </p>
            <% end %>
            
            <strong>Created by: <%= link_to(@pin.user.name, user_path(@pin.user)) if @pin.user %></strong>
            <div class="dropdown">
                <i id="flag" class="fa fa-flag pull-right" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                </i>
                <ul class="dropdown-menu pull-right" role="menu" aria-labelledby="dLabel">
                  <li class="flag_link">
                    <%= mail_to "katie@resilientapp.com", "Intellectual Property?", subject: "Intellectual Property - Channel: #{@channel.id}, Pin: #{@pin.id}", body: "www.resilientapp.com#{channel_pin_path}, Pin Author: #{@pin.user.email}"   %>
                  </li>
                  <li class="flag_link">
                    <%= mail_to "katie@resilientapp.com", "Flag Pin", subject: "Flagged Pin - Channel: #{@channel.id}, Pin: #{@pin.id}", body: "www.resilientapp.com#{channel_pin_path},  Pin Author: #{@pin.user.email}"   %>
                  </li>
                </ul>
            </div>

            <% if @pin.user == current_user %>
              <%= link_to "Edit", edit_channel_pin_path(@channel, @pin) %> |
              <%= link_to 'Delete', channel_pin_path(@channel, @pin), data: {:confirm => 'Are you sure you want to delete this pin?'}, method: :delete %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

     <br><div class="text-center"><strong>If you like this pin, please share it with your friends!  Spread the word about Resilient. :)</strong>
   </div>

<div class='shareaholic-canvas' data-app='share_buttons' data-app-id='13081882'></div>

<br><br><div class="text-center"><a href="/resources"><img src="/images/classes-ad.jpg"></a></div><br><br>

</div>
</div>
</div>
  </div>
</div>
