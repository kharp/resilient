<%= render 'pages/home' unless user_signed_in? %>

<div class="main-container">
  <header class="signup">
      <div class="background-image-holder parallax-background">
        <img class="background-image" alt="Background Image" src="/images/home.jpg">
      </div>

      <div class="container text-center">
        <div class="row text-center">
          <div class="col-sm-12 text-center">
            <h1 class="text-white">Browse</h1>
          </div>
        </div>
      </div>
  </header>

  <div class="container">

    <div class="col-md-3">

      <%= link_to new_channel_path do %>
        <div class="new_channel_box">
          Add Channel <br />
          <i class="fa fa-plus-circle fa-2x"></i>
        </div>
      <% end %>
    </div>

    <div id="pins" class="transitions-enabled">

      <% @channels.each do |channel| %>
        <div class="col-md-3">
          <%= link_to channel do %>
            <div class="channel_box">
              <%= channel.name %>
              <br />

            </div>
            <div class="channel_footer">
              <hr>
              <%= channel.description.truncate(60) %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <br>

  </div>


</div>