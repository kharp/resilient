<% @pins.each do |pin|%>
<div aria-hidden="false" aria-labelledby="myModalLabel" class="modal fade" id="new-repin-modal-<%= pin.id %>" role="dialog" tabindex="-1">
  <% @pin = pin %>
  <%= render partial: '/pins/repin_new_modal' %>
</div>
<% end %>

<div class="main-container">
  <header class="signup">
    <div class="background-image-holder parallax-background">
      <img class="background-image" alt="Background Image" src="/images/browse.jpg">
    </div>

    <div class="container text-center">
      <div class="row text-center">
        <div class="col-sm-12 text-center">
          <h1 class="text-white"><%= @channel.name %></h1>
          <span class="text-white"><%= @channel.description %></span>
        </div>
      </div>

    </div>
  </header>

  <p id="notice"><%= notice %></p>

  <div class="container">

    <%= link_to 'Back', channels_path %> |
    <% if @channel.user == current_user %>
      <%= link_to 'Edit', edit_channel_path(@channel) %> |
      <%= link_to 'Delete', channel_path(@channel), data: {:confirm => 'Are you sure you want to delete this pin?'}, method: :delete %>
    <% end %>

<div class="text-center"><script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
<!-- Resilient Pin Page- Horizontal -->
<ins class="adsbygoogle"
     style="display:inline-block;width:468px;height:60px"
     data-ad-client="ca-pub-4579984495238903"
     data-ad-slot="8832584910"></ins>
<script>
(adsbygoogle = window.adsbygoogle || []).push({});
</script></div><br><br>

    <div class="row"></div>
    <% if @channel.user == current_user %>
      <div class="col-md-3">
        <%= link_to new_channel_pin_path(@channel) do %>
          <div class="new_channel_box">
            Add Pin <br />
            <i class="fa fa-plus-circle fa-2x"></i>
          </div>
        <% end %>
      </div>
    <% end %>

    <div id="pins" class="transitions-enabled">
            <% @pins.each do |pin| %>
        <div class="col-md-3">
          <div class="repin_box">
          <% if pin.user != current_user && user_signed_in? %>
            <%= link_to "javascript:void(0)", class: 'repin_link', data: { target: "#new-repin-modal-#{pin.id}", toggle: "modal"} do %>
              <i class="fa fa-heart repin pull-left"> Save</i>
            <% end %>
          <% end %>
          </div>
          <%= link_to channel_pin_path(pin.channel, pin) do %>
            <div class="channel_box">
              <span><%= image_tag pin.image.url(:medium) %></span>
            </div>
           <div class="channel_footer">
              <hr>
              <%= pin.description.truncate(60) %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>
